sf_admin_theme_jroller_plugin:
  web_dir:      /sfAdminThemejRollerPlugin # specify your folder where to pick jquery and jquery UI.
  use_jquery:   true # default. use the packaged jquery/UI
  theme_dir:      /sfAdminThemejRollerPlugin # default. change the theme directory
  theme:        redmond # default.
  css_reset:    true # default. reset default css (from Blueprint CSS)
all:
  options:
    #remove_ticketting: true
    design: tdp
    #no_event_archives: false
    #labels_offset: 500
    plugins: []
    #email_delay: 15 # in seconds
  contact:
    force_title: true
    force_uppercase: [name, city]
    force_ucfirst: [firstname]
    #force_fields: [firstname, postalcode, city]
    #force_one_phonenumber: true
    #social_informations: true
    #auto_password_size: 6
    #password_reminder_url: http://www.xxx.tld/
  organism:
    force_uppercase: [city]
    force_ucfirst: [name]
    #force_fields: [postalcode, city]
  email: 
    codes: 
      - '%%TITLE%% : contact title'
      - '%%FIRSTNAME%% : contact first name'
      - '%%NAME%% : contact last name'
      - '%%ADDRESS%% : contact address'
      - '%%POSTALCODE%% : contact zip code'
      - '%%CITY%% : contact city'
      - '%%COUNTRY%% : contact country'
      - '%%FUNCTION%% : contact function in the organism'
      - '%%ORGANISM%% : organism name'
      - '%%EMAILADDRESS%% : contact email'    
